{
    "app": "anomaly_detection",
	"data": {
		"features": [
            "x",
			"y",
			"z"
		],
		"labels": [
			"distance_anomaly",
            "height_anomaly",
            "high_speed_anomaly",
            "low_speed_anomaly",
            "airline_anomaly"
		],
		"sequence_length": 5,
        "stride": 1
    },
	"model": {
        "num_layers": 3,
        "d_model": 32,
        "num_attention_heads": 4,
        "conv_kernel_size": 3,
		"optimizer": {
			"type": "adam",
			"learning_rate": 0.001
		}
	},
	"run": {
		"train": {
            "data_shift": 1,
			"batch_size": 128,
            "num_epochs":10,
            "shuffle_buffer_size": 10000,
            "steps": 500000
		},
		"eval": {
            "data_shift": 1,
			"batch_size": 128,
            "steps": 1000,
            "every_epochs": 1,
            "start_delay_seconds":120,
            "throttle_secs": 600
		},
        "predict": {
            "data_shift": 1,
			"batch_size": 128
		},
        "save": {
            "model_dir": "/Users/Tianziyang/Desktop/fake/saved",
			"save_summary_steps": 100,
			"save_checkpoints_steps": 1000,
            "keep_checkpoint_max": 10
        },
        "distribute": {
             "type": null,
             "workers": ["localhost: 6001", "localhost: 6002", "localhost: 6003"]
        }
	}
}